:root {
  --color: rebeccapurple;
  --text: white;
}

body {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 100vw;
  height: 100vh;
  margin: 0;

  background: var(--color);
  font-family: system-ui;

  h1 {
    color: var(--text);
  }

  p:empty {
    display: none;
  }
}